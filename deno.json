{
  "imports": {
    "lume/": "https://deno.land/x/lume@v2.4.2/",
    "tailwind/colors": "https://esm.sh/tailwindcss@3.4.7/colors"
  },
  "tasks": {
    "lume": "echo \"import 'lume/cli.ts'\" | deno run -A -",
    "build": "deno task lume",
    "serve": "deno task lume -s"
  },
  "compilerOptions": {
    "types": ["lume/types.ts"]
  },
  "lint": {
    "exclude": ["./_site"],
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "exclude": ["./_site"]
  }
}
